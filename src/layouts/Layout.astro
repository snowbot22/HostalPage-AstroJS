---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "FaunaOne";
    src: url("/fonts/FaunaOne.ttf");
  }
  @font-face {
    font-family: "Cinzel";
    src: url("fonts/Cinzel.ttf");
  }
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  html {
    font-size: 16px;
  }
  body {
    background: #f0efee;
    color: #121212;
    font-family: "FaunaOne", sans-serif;
  }
  a {
    all: unset;
    cursor: pointer;
  }
  ul {
    list-style: none;
  }
  p{
    font-size: 18px;
    line-height: 1.5;
  }

  /* FLEX */
  .flex--row--nowrap {
    display: flex;
    flex-flow: row nowrap;
  }
  .flex--col--nowrap {
    display: flex;
    flex-flow: column nowrap;
  }
  .flex--center {
    justify-content: center;
    align-items: center;
  }
  .flex--row--wrap{
    display: flex;
    flex-flow: row wrap;
  }

  /* FONT */
  .font--title {
    font-family: "Cinzel", monospace;
  }

  /* A */
  .a--button {
    background-color: #fff;
    color: #000;
    width: fit-content;
    font-size: 20px;
    padding: 8px 17px;
    border-radius: 10px;
    font-weight: 500;
    -webkit-box-shadow: 0px 2px 26px 0px rgba(69, 69, 69, 0.41);
    -moz-box-shadow: 0px 2px 26px 0px rgba(69, 69, 69, 0.41);
    box-shadow: 0px 2px 26px 0px rgba(69, 69, 69, 0.41);
  }

  /* GRID */
  .grid--center {
    display: grid;
    place-items: center;
  }

  /* MARGIN */
  .m--t--10 {
    margin-top: 10px;
  }
  .m--t--20 {
    margin-top: 20px;
  }
</style>
